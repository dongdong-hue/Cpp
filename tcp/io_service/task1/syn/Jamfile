import path ;
import os ;

path-constant CWD : . ;

exe client
    : 
      client.cpp
      $(BOOST_PARH)/libboost_system.so
      $(BOOST_PARH)/libboost_thread.so
    :
      <cxxflags>"-std=c++11"
    ;

exe service
    : 
      service.cpp
      $(BOOST_PARH)/libboost_system.so
      $(BOOST_PARH)/libboost_thread.so
    :
      <cxxflags>"-std=c++11"
    ;

install stage : client service : <install-dependencies>on <install-type>EXE <install-type>LIB <location>$(CWD)/stage ;

explicit stage ;