exe service
    : 
      $(CWD)/service/server.cpp
      $(CPP_PATH)//boost
      $(CPP_PATH)/3rd//3rd_base
      #$(BOOST_ROOT)/libboost_system.so
      #$(BOOST_ROOT)/libboost_thread.so
    :
      <cxxflags>"-std=c++11"
      #<linkflags>-Wl,--no-as-needed
      #<linkflags>-lrt
      #<linkflags>-ldl
      #<linkflags>-lcrypto
    ;

install etc : $(CWD)/service/etc/server.json : <location>$(CWD)/stage/etc/ ;
install bin : 
              service 
            : <install-dependencies>on 
              <install-type>EXE 
              <install-type>LIB 
              <location>$(CWD)/stage ;

alias stage : etc bin ;
explicit stage ;