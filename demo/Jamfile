import path ;
import os ;

path-constant BOOST_PARH : /usr/lib/ ;
path-constant CWD : . ;

exe test1
    : 
      $(CWD)/test_base_child/test1.cpp
    :
      <cxxflags>"-std=c++11"
    ;

exe struct_test
    : 
      $(CWD)/struct_demo/struct_test.cpp
    :
      <cxxflags>"-std=c++11"
    ;

install stage 
    : 
        test1 
        struct_test
    : 
        <install-dependencies>on 
        <install-type>EXE 
        <install-type>LIB 
        <location>$(CWD)/stage 
    ;

explicit stage ;